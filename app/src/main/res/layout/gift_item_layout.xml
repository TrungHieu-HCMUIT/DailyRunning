<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="340dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/provider_editText"
                tools:text="Tên nhà cung cấp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card_view"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="#868686"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gift_detail_textView"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/provider_editText"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/card_view"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxEms="2"
                android:maxLines="2"
                android:textSize="16sp"
                tools:text="Chi tiết ưu đãi Chi tiết ưu đãi Chi tiết ưu đãi"
                android:textColor="#333333" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="9dp">

                <ImageView
                    android:id="@+id/gift_imageView"
                    tools:srcCompat="@tools:sample/avatars"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/running_point_imageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_running_point" />

                <TextView
                    android:id="@+id/point_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/roboto_regular"
                    tools:text="599"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>