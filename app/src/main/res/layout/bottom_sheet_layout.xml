<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00A896">


    <ImageButton
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gift_imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:tag="isUnset"
            android:src="@drawable/image_placeholder" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/select_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_camera"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toBottomOf="@+id/card_view" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@+id/select_image_button">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp"
            app:strokeColor="#afafaf"
            app:strokeWidth="1dp">

            <EditText
                android:id="@+id/provider_name_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@null"
                android:fontFamily="@font/svn_avo"
                android:gravity="top"
                android:hint="Tên nhà cung cấp"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="@color/primary_color_text"
                android:textColorHint="@color/secondary_color_text"
                android:textSize="15dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp"
            app:strokeColor="#afafaf"
            app:strokeWidth="1dp">

            <EditText
                android:id="@+id/describe_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@null"
                android:fontFamily="@font/svn_avo"
                android:gravity="top"
                android:hint="Chi tiết quà tặng"
                android:inputType="textCapSentences"
                android:maxLines="10"
                android:padding="4dp"
                android:textColor="@color/primary_color_text"
                android:textColorHint="@color/secondary_color_text"
                android:textSize="15dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp"
            app:strokeColor="#afafaf"
            app:strokeWidth="1dp">

            <EditText
                android:id="@+id/running_point_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@null"
                android:fontFamily="@font/svn_avo"
                android:gravity="top"
                android:hint="Điểm running"
                android:inputType="number"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="@color/primary_color_text"
                android:textColorHint="@color/secondary_color_text"
                android:textSize="15dp" />

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#ECBA67"
            android:fontFamily="@font/roboto_regular"
            android:text="XÁC NHẬN"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#DC4A4A"
            android:fontFamily="@font/roboto_regular"
            android:text="XÓA"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>