<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <View

            android:id="@+id/rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rectangle_2">

        </View>

        <TextView
            android:id="@+id/saveRun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-40dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_horizontal"
            android:text="@string/luuhoatdong"
            android:textColor="@color/white"
            android:textSize="19sp" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/svn_avo_bold"
        android:gravity="center_vertical"
        android:text="Thông tin hoạt động"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout

        android:id="@+id/rectangle_1"
        android:layout_width="360dp"
        android:layout_height="135dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/rectangle_user_finish"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="17sp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:text="Quãng đường"
            android:textColor="@color/black"
            android:fontFamily="@font/svn_avo" />

        <TextView
            android:id="@+id/km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="km"
            android:fontFamily="@font/svn_avo_bold"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/line_7"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/line_7" />

        <View
            android:id="@+id/line_6"
            android:layout_width="3dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line_6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="17sp"
            android:layout_marginTop="-40dp"
          android:layout_marginRight="85dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="Thời gian di chuyển"
            android:textColor="@color/black"
            android:fontFamily="@font/svn_avo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="17sp"
            android:layout_gravity="center"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="-22dp"
            android:textSize="15sp"
            android:text="Tốc độ trung bình"
            android:textColor="@color/black"
            android:fontFamily="@font/svn_avo" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="80dp"
            android:layout_gravity="center"
            android:fontFamily="@font/svn_avo_bold"
            android:text="time"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pace"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="-30dp"
            android:layout_gravity="center"
            android:fontFamily="@font/svn_avo_bold"
            android:text="m/ph"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/svn_avo_bold"
        android:gravity="center_vertical"
        android:text="Mô tả"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginLeft="27dp"
        android:background="@drawable/rectangle_user_finish">

        <EditText
            android:id="@+id/describe_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="Aaa"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:inputType="text"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/svn_avo_bold"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:text="Tích lũy"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <View
        android:id="@+id/running_poi"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_baseline_run_circle_24"
        />
    <TextView
        android:id="@+id/i_m_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 điểm Running"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/svn_avo_bold"
        android:layout_gravity="center"
        android:gravity="center_horizontal|top"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="90dp"
        android:layout_marginTop="15dp"
        android:id="@+id/btnBack"
        android:text="Hủy"
        android:fontFamily="@font/roboto_regular"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:backgroundTint="#DEDEDE"
        app:cornerRadius="18dp"
        ></Button>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/btnSave"
        android:text="Lưu"
        android:fontFamily="@font/roboto_regular"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/color_palette_3"
        app:cornerRadius="18dp"
        ></Button>

</LinearLayout>
