<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <TextView
            android:id="@+id/logo_typo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_spring_blue_vinyl"
            android:gravity="center_horizontal|top"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="35dp"
            android:src="@drawable/ic_baseline_run_circle_24"
            android:scaleType="centerInside"
            app:fabCustomSize="112dp"
            app:maxImageSize="134dp"
            />

        <LinearLayout
            android:id="@+id/staticPostLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/lighter_grey"
            android:layout_marginTop="530dp"
            android:visibility="invisible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="100dp"
                android:text="00:00"

                android:textSize="30dp" />

            <TextView
                android:id="@+id/data_distance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/staticPostLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@color/lighter_grey"
            android:visibility="invisible"
            android:layout_marginTop="530dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Thời gian"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_distance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Quảng đường"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/lighter_grey"
            android:id="@+id/staticPostLayout2"
            android:layout_marginTop="620dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible"
                android:id="@+id/btnEnd"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_stop_circle_24"

                />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btnPause"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_pause_circle_filled_24" />
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btnCountinue"
                android:visibility="invisible"
                android:background="@drawable/ic_baseline_play_circle_filled_24"
                />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>




